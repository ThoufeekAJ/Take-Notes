<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#429483"
    tools:context=".Save" >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="NOTES"
        android:textSize="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#EB0845"
        android:layout_alignBaseline="@+id/button50"
        android:layout_alignBottom="@+id/button50"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape"
        android:text="Send" />

    <Button
        android:id="@+id/button50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:layout_toLeftOf="@+id/textView4"
        android:background="@drawable/shape"
        android:text="Save"
        android:textColor="#EB0845" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button50"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="57dp"
        android:fontFamily="Lucida calligraphy"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button51"
        android:layout_alignBottom="@+id/button51"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape"
        android:text="Open" />

</RelativeLayout>
